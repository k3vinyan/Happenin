<%= form_for @customer do |f| %>
  <div class="form-div">
    <%= f.label :name %><br>
    <%= f.text_field :name, id: 'name_input' %>
  </div>

  <div class="form-div">
    <%= f.label :email %><br>
    <%= f.text_field :email, id: 'email_input' %>
  </div>

  <div class="form-div">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, id: 'phone_input' %>
  </div>

  <div class="form-div">
    <%= f.label :password %><br>
    <%= f.password_field :password, id: 'password_input' %>
  </div>

  <div class="form_div">
    <%= f.submit "Submit" %>
  </div>

<% end %>
