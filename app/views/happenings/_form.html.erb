<%= form_for [@business, @happening] do |f| %>
  <div class="form-div">
    <%= f.label :title %><br>
    <%= f.text_field :title, id: 'title_input' %>
  </div>

  <div class="form-div">
    <%= f.label :description %><br>
    <%= f.text_area :description, id: 'description_input' %>
  </div>

  <div class="form-div">
    <%= f.label :start_time %><br>
    <%= f.datetime_field :start_time, id: 'start_time_input' %>
  </div>

  <div class="form-div">
    <%= f.label :end_time %><br>
    <%= f.datetime_field :end_time, id: 'end_time_input' %>
  </div>
  <input type="hidden" id="business-id" value="<%= @business.id %>" />
  <input type="hidden" id="business-address" value="<%= "#{@business.address} #{@business.city} #{@business.state} #{@business.zip}" %>" />
  <div class="form_div">
    <%= f.submit "Submit", id: 'new_happenin' %>
  </div>

<% end %>
